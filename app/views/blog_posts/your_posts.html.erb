<h1>Your Posts</h1>

<div class="row">
<% current_user.blog_posts.each do |blog_post| %>
      <div class="col-md-12">
        <div class="panel panel-default">
          <div class="panel panel-heading">
            <%= link_to blog_post.title, blog_post %>
          </div>
          <div class="panel-body">
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> by <i><%= blog_post.user.name %></i><br>
            <br>
            <p><%= truncate blog_post.blog_entry, length: 250 %>
            <%= link_to 'Read more', blog_post %></p>
          </div>
          <div class="panel-footer">
            <%= link_to 'Edit', edit_blog_post_path(blog_post), class:"btn btn-custom" %>
            <%= link_to 'Destroy', blog_post, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-mycustom" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>