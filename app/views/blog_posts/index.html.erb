<p id="notice"><%= notice %></p>

<h1>Blog Posts</h1>
<p><i>Welcome <%= current_user.email %>!</i></p>
  <div class="row">
    <% @blog_posts.each do |blog_post| %>
      <div class="col-md-3">
        <div class="panel panel-default">
          <div class="panel panel-heading">
            <%= link_to blog_post.title, blog_post %>
          </div>
          <div class="panel-body">
            by <%= blog_post.user.email %><br>
            <br>
            <p><%= truncate blog_post.blog_entry, length: 250 %>
            <%= link_to 'Read more', blog_post %></p>
          </div>
          <div class="panel-footer">
            <%= link_to 'Edit', edit_blog_post_path(blog_post), class:"btn btn-custom" %>
            <%= link_to 'Destroy', blog_post, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-mycustom" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

<br>

<%= link_to 'New Blog post', new_blog_post_path, class:"btn btn-custom3" %>
<br>