<p id="notice"><%= notice %></p>

<div class="panel panel-default">
  <div class="panel-heading">
    <%= @blog_post.title %>
  </div>
  <div class="panel-body">
  <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> by <strong><%= link_to @blog_post.user.username, user_posts_path(id: @blog_post.user.id) %></strong> 
    <br>
    <br>
  <%= @blog_post.blog_entry %>
  <br>
  <%= @blog_post.created_at.strftime('%m/%d/%Y %H:%M:%S') %>
  </div>
</div>

<div class="panel panel-default">
  <div class="panel-heading">
    Leave a comment
  </div>
  <div class="panel-body">
  <%= render 'comments/form' %>
  </div>
</div>

<div class="panel panel-default">
  <div class="panel-heading">
  <p>Comments</p>
  </div>
  <div class="panel-body">
  <% @blog_post.comments.each do |comment| %>
      <p><strong><%= link_to comment.user.username, user_posts_path(id: comment.user.id) %></strong> said:</p>
      <br>
      <p><%= comment.comment_entry %></p>
      <%= comment.created_at.strftime('%m/%d/%Y %H:%M:%S') %>
  <% end %>
  </div>
</div>

<% if current_user.id == @blog_post.user.id %>
<div>
  <%= link_to 'Edit', edit_blog_post_path(@blog_post) %> |
  <%= link_to 'Back', blog_posts_path %>
</div>
<% end %>

